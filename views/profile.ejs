<% include ./partials/header.ejs %>
<div class="w-full min-h-screen relative bg-zinc-900 overflow-hidden text-white py-5 transition ease-in-out duration-100	">
  <div class="nav flex justify-between items-center px-4">
    <h3 class="text-lg" style="text-transform: capitalize;"><%= user.username%></h3>
    <div class="icons flex gap-5">
      <a href="/upload"><i class="text-[1.4rem] ri-add-box-line"></i></a>
      <i class="text-[1.4rem] ri-menu-line"></i>
      <i class="text-[1.4rem] ri-close-line hidden "></i>
    </div>
  </div>
  <div class="flex justify-between items-center pl-6 pr-[12vw] mt-8">
    <div class="w-[19vw] h-[19vw] bg-sky-100 rounded-full overflow-hidden">
      <% if (!user.profileImage) { %>
      <%      } else { %>
      <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
      <% } %>
    </div>
    <div class="stats flex gap-5 items-center justify-between">
      <div class="flex flex-col items-center justify-center">
        <h3><%= user.post.length%></h3>
        <h4>Posts</h4>
      </div>
      <div class="flex flex-col items-center justify-center">
        <a href="/followers/<%= user._id %>">
          <h3><%= user.followers.length %></h3>
        </a>
        <h4>Followers</h4>
      </div>
      <div class="flex flex-col items-center justify-center">
        <a href="/following/<%= user._id %>">

          <h3><%= user.following.length%></h3>
        </a>
        <h4>Following</h4>

      </div>
    </div>
  </div>
  <div class="dets px-6 mt-5">
    <h3 class="text-lg mb-1" style="text-transform: capitalize;"><%= user.name%></h3>
    <p class="text-xs tracking-tight opacity-50"><%= user.bio %></p>
  </div>
  <div class="px-6 mt-5">
    <a class="px-3 py-2 bg-zinc-800 text-xs rounded-md" href="/edit">Edit Profile</a>
  </div>
  <div class="posts w-full flex gap-1 py-2 mt-5 flex-wrap">

    <% if(user.post.length == 0) { %>
    <div class="post w-[32.5%] h-32 flex justify-center items-center  bg-sky-100">
      <a href="/upload" style="text-decoration: none;"><i class="text-[5.4rem] ri-add-box-line text-black"></i></a>
    </div>
    <% } %>
    <% user.post.forEach(function(post){ %>

    <div class="post w-[32.5%] h-32 flex justify-center items-center overflow-hidden">
      <a href="/userposts" class="w-full h-full object-cover">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= post.postImage %>" alt="">
      </a>
    </div>


    <% })%>

  </div>

  <div id="logoutpage" class="w-full min-h-[90%] bg-zinc-900 absolute top-[7%] left-[100%] text-white py-5">

    <div class="flex justify-end  px-4">
      <a href="/logout">
        <h3 class="text-lg" style="text-transform: capitalize;">Logout</h3>
      </a>
    </div>
  </div>

</div>

<script>
  const menuIcon = document.querySelector('.ri-menu-line');
  const closeIcon = document.querySelector('.ri-close-line');
  const logoutPage = document.getElementById('logoutpage');

  menuIcon.addEventListener('click', function() {
    menuIcon.classList.add('hidden');
    closeIcon.classList.remove('hidden');
    logoutPage.classList.remove('left-[100%]');
  });

  closeIcon.addEventListener('click', function() {
    closeIcon.classList.add('hidden');
    menuIcon.classList.remove('hidden');
    logoutPage.classList.add('left-[100%]');
  });
</script>


<% include ./partials/footer.ejs %>