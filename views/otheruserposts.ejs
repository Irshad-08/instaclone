<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-900 text-white py-5">
  <div class="nav flex justify-between items-center px-4">
    <h3 class="text-lg" style="text-transform: capitalize;"><%= user.username %></h3>
  </div>
  <div class="flex justify-between items-center pl-6 pr-[12vw] mt-8">
    <!-- Profile Image -->
    <div class="w-[19vw] h-[19vw] bg-sky-100 rounded-full overflow-hidden">
      <% if (!user.profileImage) { %>
      <!-- Handle if no profile image -->
      <% } else { %>
      <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
      <% } %>
    </div>
    <!-- User Stats -->
    <div class="stats flex gap-5 items-center justify-between">
      <div class="flex flex-col items-center justify-center">
        <h3><%= user.post.length %></h3>
        <h4>Posts</h4>
      </div>
      <div class="flex flex-col items-center justify-center">
        <h3 id="followerCount"><%= user.followers.length %></h3>
        <h4>Followers</h4>
      </div>
      <div class="flex flex-col items-center justify-center">
        <h3><%= user.following.length %></h3>
        <h4>Following</h4>
      </div>
    </div>
  </div>
  <!-- User Details -->
  <div class="dets px-6 mt-5">
    <h3 class="text-lg mb-1" style="text-transform: capitalize;"><%= user.name %></h3>
    <p class="text-xs tracking-tight opacity-50"><%= user.bio %></p>
  </div>

  <div class="dets flex justify-center w-full px-6 mt-5">
    <button class="follow-btn px-8 py-2 bg-blue-500 mx-5 rounded-md" onclick="toggleFollow('<%= user._id %>')">
      <%= user.followers.includes(loggedinuser._id) ? 'Unfollow' : 'Follow' %>
    </button>
    <button class="px-6 py-2 bg-blue-500 mx-5 rounded-md">Message</button>
  </div>


  <!-- User Posts -->
  <div class="posts mb-10">
    <div class="post mt-10  w-full min-h-[50vh]">
      <% posts.reverse().forEach((post, index) => { %>
      <div class="title px-4 flex items-center gap-2 ">
        <div class="w-[8vw] h-[8vw] bg-sky-100 rounded-full overflow-hidden">
          <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
        </div>
        <h4 class="text-sm" style="text-transform: capitalize;"><%= user.username %></h4>
        <h6 class="text-xs opacity-30">1d</h6>
      </div>
      <div class="w-full h-96 mt-4 overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= post.postImage %>" alt="">
      </div>


      <div class="options w-full px-4 flex justify-between items-center text-[1.4rem]">
        <div class="flex gap-3 mt-2">
          <button class="like-btn" data-post-id="<%= post._id %>" data-is-liked="<%= post.isLikedByCurrentUser %>">
            <% if (post.isLikedByCurrentUser) { %>
            <i class="ri-heart-fill" style="color: red;"></i>
            <% } else { %>
            <i class="ri-heart-line"></i>
            <% } %>
          </button>
          <i class="ri-chat-3-line"></i>
          <i class="ri-share-circle-line"></i>
        </div>
        <i class="ri-bookmark-line"></i>
      </div>
      <h3 id="likecnt_<%= post._id %>" class="px-4 mt-2 text-sm leading-none tracking-tight"><%= post.likes.length %> likes</h3>
      <h2 class="text-white font-light text-sm mt-2 mb-10"><span class="font-semibold pl-4 pr-2" style="text-transform: capitalize;"><%= user.username %></span><%= post.caption %></h2>
      <% }) %>
    </div>
  </div>
</div>

<div class="footer text-white flex justify-between items-center w-full fixed bottom-0 z-[10] bg-zinc-900 px-10 py-3">
  <a href="/feed"><i class="text-[1.4rem] ri-home-line"></i></a>
  <a href="/search"><i class="text-[1.4rem] ri-search-line"></i></a>
  <a href="/upload"><i class="text-[1.4rem] ri-add-box-line"></i></a>
  <a href="/profile">
    <div class="w-6 h-6 bg-zinc-300 rounded-full overflow-hidden">
      <img src="/images/uploads/<%= loggedinuser.profileImage %>" alt="">
    </div>
  </a>
</div>




<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
  //script for following

  const toggleFollow = async (userId) => {

    const response = await axios.post('/toggleFollow', {
      userId
    });

    // Update the button text and handle UI changes based on the response
    const followBtn = document.querySelector('.follow-btn');
    if (response.data.isFollowing) {
      followBtn.innerText = 'Unfollow';
    } else {
      followBtn.innerText = 'Follow';
    }

    // Update the following count in real-time
    const followersCnt = document.getElementById('followerCount');
    followersCnt.innerText = response.data.followersCount;

  };
</script>

<script>
  // script for like/dislike

  const likeButtons = document.querySelectorAll(".like-btn");

  likeButtons.forEach((button) => {
    button.addEventListener("click", async function() {
      const postId = button.dataset.postId;
      const isLiked = button.dataset.isLiked === "true";
      const likeCountElement = document.getElementById(`likecnt_${postId}`);

      const response = await axios.post(`/like/${postId}`, {
        isLiked,
      });

      // Update the specific button and like count for the clicked post
      if (response.data.isLiked) {
        button.innerHTML = '<i class="ri-heart-fill" style="color: red;"></i>';
      } else {
        button.innerHTML = '<i class="ri-heart-line"></i>';
      }

      likeCountElement.textContent = `${response.data.likeCount} likes`;

    });
  });
</script>


</body>

</html>